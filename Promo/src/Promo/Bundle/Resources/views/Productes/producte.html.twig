{% extends 'PromoBundle::layout.html.twig' %}

{% block meta_description %}Catálogo de productos Promoquality. {{ producte.nom }}. {{ producte.especificacions }} {% endblock %}

{% block stylesheets %}
	{{ parent() }}
    <link media="all" href="{{ asset('css/colorbox.css') }}" type="text/css" rel="stylesheet">
{% endblock %}

{% block javascriptshead %} 
	{{ parent() }}
	<script src="{{ asset('js/jquery.colorbox.js') }}" type="text/javascript"></script>
{% endblock %}

{% block title %} Catálogo de productos Promoquality. {{ producte.nom }}{% endblock %}

{% block breadcrumb %}
	<div id="current-category" class="category-item">
		<h3><a href="{{ path('PromoBundle_catalogo', {'categoria': producte.categoria.ruta }) }}">{{ producte.categoria.root }}</a></h3>
	</div>
{% endblock %}

{% block content %}
	<div class="left-block">
		<div id="producte-nom">{{ producte.nom }}</div>
		<div id="producte-espc">
			<p class="producte-titol">Especificaciones técnicas</p>
			<p class="producte-detall">{{ producte.especificacions }}</p>
		</div>
		<div id="producte-preus">
			<p class="producte-titol">Precios (no incluyen impresión)</p>
			<p class="producte-detall">{{ producte.preus }}</p>
		</div>
	</div>
	<div class="right-block">
		<div id="producte-imatge-portada">
			<div class="imatge-hcenter">
				<a href="{{ producte.imatgeportada.webPath }}" class="colorbox"><img  height="350" 
					alt="{{ producte.imatgeportada.titol }}" title="{{ producte.imatgeportada.titol }}" 
					src="{{ producte.imatgeportada.webPath }}"></a>
			</div>
		</div>
		<div id="producte-imatges">
			{% for imatge in producte.imatges %}
				<div class="producte-imatge">
					<div class="cataleg-imatge imatge-hcenter">
						<a href="{{ imatge.webPath }}" class="colorbox"><img width="{{ imatge.width }}" height="{{ imatge.height }}" 
						src="{{ imatge.webPath }}" alt="{{ imatge.titol }}"	title="{{ imatge.titol }}"></a>
					</div>
				</div>
			{% endfor %}		
		</div>
	</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
    <script type="text/javascript">

	$(document).ready(function(){
		$("#menu-catalogo").addClass("menu-item-active");

		redimensionarImatgesCataleg(".cataleg-imatge img", 0, 0);

		$(".colorbox").colorbox({
			rel:'{{ producte.nom }}',
			scalePhotos: true,
			maxWidth: "600px",
			maxHeight: "500px"
		});
	});
	</script>
    
{% endblock %}