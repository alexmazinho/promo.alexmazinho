{% extends 'PromoBundle::layout.html.twig' %}

{% block meta_description %}Promoquality - Panel administración. Cambio de contraseña {% endblock %}

{% block meta_robots %}noindex, follow{% endblock %}

{% block title %}Promoquality - Panel administración. Cambio de contraseña {% endblock %}


{% block content %}
 	{% if app.session.hasFlash('sms-notice') %}
    <div class="sms-notice">
        {{ app.session.flash('sms-notice') }}
    </div>
	{% endif %}
	<div id="usuari"  class="form-container">
		<form action="{{ path('PromoBundle_usuari') }}" method="post" {{ form_enctype(form) }}>
			<div id="pwd-usuari" class="form-row clearfix">
				{{ form_label(form.pwd.first, 'Contraseña*:') }}
				{{ form_widget(form.pwd.first) }}
			</div>
			<div id="pwdrepeate-usuari" class="form-row clearfix">
				{{ form_label(form.pwd.second, 'Repetir contraseña*:') }}
				{{ form_widget(form.pwd.second) }}
			</div>
			{{ form_rest(form) }}
			
			<div>
				<label>&nbsp;</label>
		    	<input type="submit" class="submit-form" value="Entrar" />
		    </div>
		</form>
	</div>
{% endblock %}

{% block footer %}{% endblock %}

